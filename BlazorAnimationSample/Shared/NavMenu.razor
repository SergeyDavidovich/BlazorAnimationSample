
<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <Animate Animation="Animations.SlideRight" DelayMilliseconds="200">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Home
                </NavLink>
            </div>
        </Animate>
        <Animate Animation="Animations.SlideRight" DelayMilliseconds="400">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="counter">
                    <span class="oi oi-plus" aria-hidden="true"></span> Counter
                </NavLink>
            </div>
        </Animate>
        <Animate Animation="Animations.SlideRight" DelayMilliseconds="600">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="fetchdata">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
                </NavLink>
            </div>
        </Animate>
        <Animate Animation="Animations.SlideRight" DelayMilliseconds="800">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="gridview">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> GridView
                </NavLink>
            </div>
        </Animate>
        <Animate Animation="Animations.SlideRight" DelayMilliseconds="800">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="schedule">
                    <span class="oi oi-calendar" aria-hidden="true"></span> Schedule
                </NavLink>
            </div>
        </Animate>
    </nav>
</div>

@code {
    private bool collapseNavMenu = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
